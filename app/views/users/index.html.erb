<h2 align="center">List Of Alpha Blogger</h2>
<div align="center">
<% @users.each do |user| %>
	<ul class="listing">
		<div class="row">
			<div class="well col-md-4 col-md-offset-4">
				<li><%= link_to gravator_for(user), user_path(user) %></li>
				<li class="article-title">
					<%= link_to user.username, user_path(user) %>
				</li>
				<li><small><%= pluralize(user.articles.count, "Articles") if user.articles %></small></li>
				<% if logged_in? && current_user.admin? %>
					<%= link_to "Delete this User", user_path(user), method: :delete, data: {confirm: "Are you sure?"} ,class: "btn btn-xs btn-danger"%>
				<% end %>
			</div>
		</div>
	</ul>	
<% end %>
<%= will_paginate %>
</div>